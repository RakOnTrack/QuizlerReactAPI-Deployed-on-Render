{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run dev",
      "name": "npm dev",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug secondTestingFile.js",
      "program": "${workspaceFolder}/secondTestingFile.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests with Nodemon",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
